<Window x:Class="PrimaVisual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <DockPanel LastChildFill="true">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Click="DefaultGraph_Click">Default Graph</Button>
                <Button Click="PrimaGraph_Click">Prima</Button>
            </StackPanel>
            <Canvas DockPanel.Dock="Left" Width="500" Name="DefaulCanvas"></Canvas>
            <Label DockPanel.Dock="Left" Width="2" Background="Black"></Label>
            <Canvas Name="PrimaCanvas"></Canvas>
        </DockPanel>
    </Grid>
</Window>
